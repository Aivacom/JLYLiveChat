<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp48"
    android:background="@color/white95">

    <TextView
        android:id="@+id/item_tv_uid"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center|left"
        android:textColor="@color/black95"
        android:textSize="@dimen/sp14"
        android:layout_margin="11dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btn_muted"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_muted"
        android:layout_width="@dimen/dp64"
        android:layout_height="match_parent"
        android:background="@drawable/bg_btn_blue_e0"
        android:text="禁言"
        android:textColor="#FF7C98F9"
        android:textSize="@dimen/sp12"
        android:layout_margin="11dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btn_kicked" />

    <Button
        android:id="@+id/btn_kicked"
        android:layout_width="@dimen/dp64"
        android:layout_height="match_parent"
        android:background="@drawable/bg_btn_blue_e0"
        android:text="踢出"
        android:textColor="#FF7C98F9"
        android:textSize="@dimen/sp12"
        android:layout_margin="11dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
